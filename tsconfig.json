{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2022", "dom"],
    "types": ["node", "vitest"]
  },
  "include": ["src/**/*", "src/**/*.test.ts"],
  "exclude": ["node_modules"]
}